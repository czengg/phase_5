<%= simple_form_for @dojo, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Dojos</legend>
    
    <%= f.input :name, :as => :string %>
    <%= f.input :street, :as => :string %>
    <%= f.input :city, :as => :string %>
    <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', dojos_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>