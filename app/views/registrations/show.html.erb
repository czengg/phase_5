<div class="row">
	<div class="span7">
		<h3>Registration Details</h3>
		<%= render :partial => "registration_details" %>
		<p class="supertiny">&nbsp;</p>
	</div>
</div>

<div class="form-actions">
  <%= link_to raw("<i class='icon-list'></i> Display All Registrations"), registrations_path, :class => 'btn'  %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-pencil'></i> Edit Registrations"), edit_registration_path(@registration), :class => 'btn' %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-remove icon-white'></i> Delete Registration"), registration_path(@registration), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>