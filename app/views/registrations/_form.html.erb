<%= simple_form_for @registration, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Registration</legend>
		
		<%= f.input :event, :collection => Event.active.alphabetical.all %>
    <%= f.input :tournament, :collection => Tournament.active.alphabetical.all %>
		<%= f.input :student_id, :collection => Student.active.alphabetical.all %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', registrations_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>